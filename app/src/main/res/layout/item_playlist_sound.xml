<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="32dp"
    android:paddingEnd="16dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
    android:id="@+id/sound_icon"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:layout_marginEnd="12dp"
    android:src="@android:drawable/ic_media_play" />

    <TextView
    android:id="@+id/sound_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:textAppearance="?attr/textAppearanceListItemSecondary"
    tools:text="Назва Звуку" />

    <ImageButton
    android:id="@+id/sound_item_favorite_button"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_marginStart="8dp"
    android:src="@android:drawable/star_off"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="Додати/Видалити з улюбленого" />

    <ImageButton
    android:id="@+id/button_delete_sound"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_marginStart="4dp"
    android:src="@android:drawable/ic_menu_delete"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="Видалити звук з плейлиста" />

</LinearLayout>